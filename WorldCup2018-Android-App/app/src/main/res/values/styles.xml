<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--item name="android:itemBackground">#fff</item>
        <item name="android:actionMenuTextColor">?colorPrimary</item-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBarNoTitle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ActionBarThemeOverlay" >
    </style>

    <style name="ActionBarThemeOverlay.Popup" >
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Prediction">

    </style>

    <style name="Prediction.CountryName" parent="Prediction">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal</item>
        <!--item name="android:lines">2</item-->
    </style>

    <style name="Prediction.CountryFlagContainer">

        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="corner_radius">25dp</item>
        <item name="border_color">#26629e</item>
        <item name="border_elevation">2dp</item>
        <item name="background_color">#fff</item>
    </style>

    <style name="Prediction.CountryFlagContainer.Small" parent="Prediction.CountryFlagContainer">

        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">2dp</item>

        <item name="corner_radius">15dp</item>
    </style>

    <style name="Prediction.CountryFlag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Prediction.InputScore">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_edittext_icon</item>
        <item name="android:textColor">#222222</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="Prediction.InputScore.Small" parent="Prediction.InputScore">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>


    <style name="textInputLabelForLogin" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#7AFFFFFF</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#7AFFFFFF</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="User">

    </style>

    <style name="User.LatestPerformanceItem">

        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#00ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

</resources>
